<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:id="@+id/linearRowmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15pxv"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageMenu"
                tools:ignore="ContentDescription"
                android:layout_width="@dimen/_18pxh"
                android:layout_height="@dimen/_14pxh"
                android:layout_marginTop="@dimen/_6pxv"
                android:layout_marginBottom="@dimen/_9pxv"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:id="@+id/linearRowev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_60pxh"
                android:layout_weight="0.92"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtEV"
                    style="@style/txtPoppinsbold20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:ellipsize="end"
                    android:letterSpacing="0.1"
                    android:singleLine="true"
                    android:text="@string/lbl_ev" />

                <ImageView
                    android:id="@+id/imageDownload"
                    android:layout_width="@dimen/_13pxh"
                    android:layout_height="@dimen/_25pxh"
                    android:layout_marginStart="@dimen/_7pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_4pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_download"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_download" />

                <TextView
                    android:id="@+id/txtSpot"
                    style="@style/txtPoppinsbold20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:ellipsize="end"
                    android:letterSpacing="0.1"
                    android:singleLine="true"
                    android:text="@string/lbl_spot"
                    android:textAllCaps="true" />

            </LinearLayout>
            <ImageView
                android:id="@+id/imageFilter"
                tools:ignore="ContentDescription"
                android:layout_width="@dimen/_18pxh"
                android:layout_height="@dimen/_18pxh"
                android:layout_marginStart="@dimen/_79pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_marginBottom="@dimen/_7pxv"
                android:scaleType="fitXY"/>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


</LinearLayout>